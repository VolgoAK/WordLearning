<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="listener"
            type="xyz.volgoak.wordlearning.FragmentListener"/>

        <import type="xyz.volgoak.wordlearning.training_utils.TrainingFabric"/>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="xyz.volgoak.wordlearning.fragment.StartFragment"
        android:layout_marginTop="@dimen/views_vertical_margin">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_info_main"
            style="@style/StateCard"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_words_learned_start_f"
                    style="@style/CardsText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/words_learned"
                    android:gravity="center_horizontal|bottom"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_words_dic_start_f"
                    style="@style/CardsText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="@string/words_in_dictionary"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/cv_word_trans_main"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_info_main"
            android:onClick="@{() -> listener.startTraining(TrainingFabric.WORD_TRANSLATION)}"
            style="@style/MenuCards">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:descendantFocusability="blocksDescendants"
                android:background="?selectableItemBackgroundBorderless">

                <TextView
                    style="@style/CardsText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/word_translation" />

                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/Cyv_menu"
                    android:src="@drawable/ic_wt"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_trans_word_main"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_word_trans_main"
            android:onClick="@{() -> listener.startTraining(TrainingFabric.TRANSLATION_WORD)}"
            style="@style/MenuCards">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:descendantFocusability="blocksDescendants"
                android:background="?selectableItemBackgroundBorderless">

                <TextView
                    style="@style/CardsText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/translation_word" />

                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/Cyv_menu"
                    android:src="@drawable/ic_tw"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_redactor_main"
            style="@style/MenuCards"
            android:onClick="@{() -> listener.startDictionary()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_trans_word_main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:descendantFocusability="blocksDescendants"
                android:background="?selectableItemBackgroundBorderless">

                <TextView
                    style="@style/CardsText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/start_redactor" />

                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/Cyv_menu"
                    android:src="@drawable/ic_dictionary"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_sets_main"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_redactor_main"
            android:onClick="@{() -> listener.startSets()}"
            style="@style/MenuCards">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:descendantFocusability="blocksDescendants"
                android:background="?selectableItemBackgroundBorderless">

                <TextView
                    style="@style/CardsText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/sets" />

                <de.hdodenhof.circleimageview.CircleImageView
                    style="@style/Cyv_menu"
                    android:src="@drawable/ic_sets"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>





    </android.support.constraint.ConstraintLayout>

    </ScrollView>
</layout>