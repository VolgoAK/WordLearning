<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="xyz.volgoak.wordlearning.SetActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_setact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <TextView
                android:id="@+id/tv_toolbar_title_setact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                style="@style/title_text" />

        </android.support.v7.widget.Toolbar>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraint_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_words_count_setact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/small_title_text"
                    android:layout_marginStart="@dimen/views_horizontal_margin"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Words in set - 100"/>

                <TextView
                    android:id="@+id/tv_setstatus_setact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/views_horizontal_margin"
                    style="@style/small_title_text"
                    android:gravity="bottom"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/bt_change_status_setact"
                    app:layout_constraintBottom_toBottomOf="@id/bt_change_status_setact"
                    tools:text="Set in dictionary"/>

                <Button
                    android:id="@+id/bt_change_status_setact"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_words_count_setact"
                    />

                <TextView
                    android:id="@+id/tv_send_to_train_setact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/views_horizontal_margin"
                    style="@style/small_title_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/bt_to_training_setact"
                    app:layout_constraintBottom_toBottomOf="@id/bt_to_training_setact"
                    tools:text="Send to training"/>

                <Button
                    android:id="@+id/bt_to_training_setact"
                    android:text="@string/reset"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/bt_change_status_setact"
                    app:layout_constraintRight_toRightOf="parent"/>

            </android.support.constraint.ConstraintLayout>
            </FrameLayout>





    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_set_ac"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


</android.support.design.widget.CoordinatorLayout>
</layout>