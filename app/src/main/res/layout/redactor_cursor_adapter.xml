<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/tv_word_adapter"
        android:gravity="center_vertical"
        android:textSize="@dimen/medium_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/views_horizontal_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"
        tools:text="Word"
        />

    <TextView
        android:id="@+id/tv_translation_adapter"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:layout_marginStart="@dimen/views_horizontal_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_word_adapter"
        android:layout_height="wrap_content"
        tools:text="Translation"
        />

    <TextView
        android:id="@+id/adapter_text_3"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/adapter_text_4"
        android:layout_margin="@dimen/views_horizontal_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/adapter_text_4"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/adapter_text_5"
        android:layout_margin="@dimen/views_horizontal_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/adapter_text_5"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/views_horizontal_margin"
        app:layout_constraintRight_toLeftOf="@+id/adapter_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton android:id="@+id/adapter_button"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_sound"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/views_horizontal_margin"
        android:layout_width="wrap_content"
        tools:layout_editor_absoluteY="8dp" />


</android.support.constraint.ConstraintLayout>