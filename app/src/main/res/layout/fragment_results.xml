<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="xyz.volgoak.wordlearning.ResultsFragment">

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@drawable/gray_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/views_horizontal_margin" />

    <TextView
        android:id="@+id/tv_train_finish_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/views_vertical_margin"
        android:text="@string/training_finished"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintTop_toTopOf="@+id/iv_result"
        app:layout_constraintRight_toRightOf="@+id/iv_result"
        app:layout_constraintLeft_toLeftOf="@+id/iv_result"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_result_resfrag"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/large_text_size"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_result"
        app:layout_constraintRight_toRightOf="@id/iv_result"
        app:layout_constraintTop_toBottomOf="@id/tv_train_finish_result"/>

    <TextView
        android:id="@+id/tv_result_opinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/iv_result"
        app:layout_constraintRight_toRightOf="@id/iv_result"
        app:layout_constraintTop_toBottomOf="@id/tv_result_resfrag"/>

    <Button
        style="@style/MenuButton"
        android:text="@string/start_redactor"
        android:id="@+id/result_start_redactor"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@id/iv_result"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        style="@style/MenuButton"
        android:text="@string/word_translation"
        android:id="@+id/result_start_wt"
        android:layout_below="@+id/result_start_redactor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_start_redactor"
         />

</android.support.constraint.ConstraintLayout>
