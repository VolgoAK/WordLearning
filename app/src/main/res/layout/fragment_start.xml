<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="listener"
            type="xyz.volgoak.wordlearning.FragmentListener"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="xyz.volgoak.wordlearning.StartFragment">


        <Button
            android:id="@+id/bt_word_trans_startfrag"
            style="@style/MenuButton"
            android:text="@string/word_translation"
            android:onClick="@{() -> listener.startTrainingWTFragment()}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/bt_trans_word_startfrag"
            style="@style/MenuButton"
            android:text="@string/translation_word"
            android:onClick="@{() -> listener.startTrainingTWFragment()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_word_trans_startfrag"
             />

        <Button
            android:id="@+id/bt_redactor_startfrag"
            style="@style/MenuButton"
            android:text="@string/start_redactor"
            android:onClick="@{() -> listener.startRedactorFragment()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_trans_word_startfrag" />

        <Button
            android:id="@+id/bt_sets_startfrag"
            style="@style/MenuButton"
            android:text="@string/sets"
            android:onClick="@{() -> listener.startSetsFragment()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_redactor_startfrag"
            android:layout_marginBottom="@dimen/bottom_view_margin"
            />

        <android.support.v4.widget.Space
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_sets_startfrag"
            android:id="@+id/space_startfrag"
            android:visibility="invisible"
            android:layout_width="10dp"
            android:layout_height="@dimen/views_vertical_margin" />

    </android.support.constraint.ConstraintLayout>
</layout>