<resources
    xmlns:tools="http://schemas.android.com/tools"
    >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.SimpleCoordinatorTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item tools:targetApi="21"
            name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item tools:targetApi="21"
            name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="VarButton">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">@dimen/var_buttons_width</item>
        <item name="android:layout_height">@dimen/var_button_height</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:layout_margin">@dimen/views_horizontal_margin</item>
    </style>

    <style name="MenuButton" parent="VarButton">
        <item name="android:background">@drawable/white_button</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_height">@dimen/menu_button_height</item>
        <item name="android:layout_width">@dimen/menu_button_width</item>
    </style>

    <style name="MenuCards">
        <item name="android:layout_height">@dimen/menu_card_height</item>
        <item name="android:layout_width">@dimen/menu_card_width</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardBackgroundColor">@color/semi_transparent_white</item>
        <item name="android:layout_marginTop">@dimen/views_small_margin</item>

    </style>

    <style name="DialogCard" parent="MenuCards">
        <item name="android:layout_height">@dimen/dialog_card_height</item>
        <item name="android:layout_width">@dimen/dialog_card_width</item>
        <item name="android:layout_marginLeft">@dimen/views_small_margin</item>
        <item name="android:layout_marginRight">@dimen/views_small_margin</item>
    </style>

    <style name="StateCard" parent="MenuCards">
        <item name="android:layout_height">@dimen/stats_card_height</item>
        <item name="android:layout_width">@dimen/stats_card_width</item>
    </style>

    <style name="CardsText">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="DialogCardsText" parent="CardsText">
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
    </style>

    <style name="Cyv_menu">
        <item name="civ_fill_color">@color/colorAccent</item>
        <item name="android:layout_width">@dimen/menu_image_size</item>
        <item name="android:layout_height">@dimen/menu_image_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/menu_image_margin</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="CyvDialog" parent="Cyv_menu">
        <item name="android:layout_width">@dimen/dialog_image_size</item>
        <item name="android:layout_height">@dimen/dialog_image_size</item>
    </style>



    <style name="word_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/word_training_text_size</item>
    </style>

    <style name="navigation_text">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="dialog_button">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_width">@dimen/dialog_button_width</item>
        <item name="android:layout_height">@dimen/dialog_button_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="title_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="expanded_title_text" parent="title_text">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="black_title_text" parent="title_text">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="small_title_text" parent="title_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="activated" parent="AppTheme">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
    </style>

</resources>
