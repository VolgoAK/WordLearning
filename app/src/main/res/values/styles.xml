<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VarButton">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">@dimen/var_buttons_width</item>
        <item name="android:layout_height">@dimen/var_button_height</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:layout_margin">@dimen/views_horizontal_margin</item>
    </style>

    <style name="MenuButton" parent="VarButton">
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_height">@dimen/menu_button_height</item>
        <item name="android:layout_width">@dimen/menu_button_width</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="title_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="small_title_text" parent="title_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
